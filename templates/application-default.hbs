<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    body {
      font-family: 'Arial', 'Helvetica', sans-serif;
      font-size: 11pt;
      line-height: 1.4;
      color: #333;
      margin: 0.5in;
    }
    .header {
      text-align: center;
      border-bottom: 3px solid #0066cc;
      padding-bottom: 15px;
      margin-bottom: 30px;
    }
    .header h1 {
      color: #0066cc;
      font-size: 24pt;
      margin-bottom: 5px;
    }
    .header .subtitle {
      color: #666;
      font-size: 12pt;
    }
    .header .school-term {
      margin-top: 8px;
      font-size: 11pt;
      color: #555;
    }
    .header .cover-sheet-info {
      margin-top: 8px;
      font-size: 10pt;
      font-weight: 500;
      color: #444;
      letter-spacing: 0.5px;
    }
    .header .meta {
      margin-top: 10px;
      font-size: 10pt;
      color: #888;
    }
    .section {
      margin: 25px 0;
      page-break-inside: avoid;
    }
    .section-title {
      font-size: 14pt;
      font-weight: bold;
      color: #0066cc;
      border-bottom: 2px solid #0066cc;
      padding-bottom: 5px;
      margin-bottom: 15px;
    }
    .field-row {
      margin: 8px 0;
      display: flex;
    }
    .field-label {
      font-weight: bold;
      width: 200px;
      flex-shrink: 0;
      color: #555;
    }
    .field-value {
      flex: 1;
      color: #333;
    }
    .field-value:empty::after {
      content: "â€”";
      color: #ccc;
    }
    .field-value a {
      color: #0066cc;
      text-decoration: none;
    }
    .field-value a:hover {
      text-decoration: underline;
    }
    .related-records {
      margin-left: 20px;
      margin-top: 10px;
    }
    .related-record-item {
      border-left: 3px solid #ddd;
      padding-left: 10px;
      margin: 10px 0;
    }
    .checklist-table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 10px;
      font-size: 10pt;
    }
    .checklist-table th {
      background-color: #f5f5f5;
      border: 1px solid #ddd;
      padding: 8px;
      text-align: left;
      font-weight: bold;
      color: #555;
    }
    .checklist-table td {
      border: 1px solid #ddd;
      padding: 8px;
    }
    .checklist-table tr:nth-child(even) {
      background-color: #fafafa;
    }
    .status-completed {
      color: #28a745;
      font-weight: bold;
    }
    .status-pending {
      color: #dc3545;
    }
    .status-waived {
      color: #6c757d;
      font-style: italic;
    }
    .footer {
      margin-top: 40px;
      padding-top: 20px;
      border-top: 1px solid #ddd;
      font-size: 9pt;
      color: #888;
      text-align: center;
    }
    @media print {
      .section {
        page-break-inside: avoid;
      }
      .field-value a {
        color: #0066cc;
      }
    }
  </style>
</head>
<body>
  <div class="header">
    <h1>{{applicantName}}</h1>
    <div class="subtitle">{{programName}}</div>
    <div class="school-term">
      {{schoolName}}{{#if termName}} - {{termName}}{{/if}}
    </div>
  </div>
  
  {{#each sections}}
  <div class="section">
    <div class="section-title">{{name}}</div>
    {{#each fields}}
    <div class="field-row">
      <div class="field-label">{{label}}:</div>
      <div class="field-value">
        {{#if link}}
          <a href="{{link}}" target="_blank">{{value}}</a>
        {{else}}
          {{value}}
        {{/if}}
      </div>
    </div>
    {{/each}}
  </div>
  {{/each}}
  
  {{#if checklistItems.length}}
  <div class="section">
    <div class="section-title">Checklist Items</div>
    <table class="checklist-table">
      <thead>
        <tr>
          <th>Item</th>
          <th>Status</th>
          <th>Date Completed</th>
          <th>Completed By</th>
        </tr>
      </thead>
      <tbody>
        {{#each checklistItems}}
        <tr>
          <td>{{itemName}}</td>
          <td class="{{statusClass}}">{{status}}</td>
          <td>{{dateCompleted}}</td>
          <td>{{completedBy}}</td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
  {{/if}}
  
  <div class="footer">
    <div>Created on: {{generatedDate}}</div>
    <div style="margin-top: 4px;">This document was automatically generated by the Application PDF Generation Service.</div>
  </div>
</body>
</html>

